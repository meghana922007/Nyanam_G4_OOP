<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="600.0" maxWidth="800" minHeight="600.0" minWidth="800" prefHeight="600.0" prefWidth="800" styleClass="root" stylesheets="@TeacherDashboard.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.nyanam.TeacherDashboardController">

    <Label styleClass="page-title" text="Teacher Dashboard" />

    <TilePane styleClass="menu-grid">

        <Button onAction="#handleManageExams" styleClass="menu-button" text="Manage Exams" />
        <Button onAction="#handleUploadMaterial" styleClass="menu-button" text="Upload Material" />
        <Button onAction="#handleGradeExams" styleClass="menu-button" text="Grade Exams" />
        <Button onAction="#handleViewReports" styleClass="menu-button" text="View Reports" />

        <Button onAction="#handleLogout" styleClass="logout-button" text="Logout" />
    </TilePane>

    <Label fx:id="statusLabel" styleClass="status-label" />

</VBox>
