<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.ManageUsersController"
      alignment="TOP_CENTER"
      stylesheets="@ManageUsers.css" styleClass="root">

    <Label text="Manage User Accounts" styleClass="page-title"/>

    <TabPane fx:id="tabPane" VBox.vgrow="ALWAYS" styleClass="tab-pane">
        <tabs>
            <Tab text="Students">
                <VBox>
                    <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="studentNameCol" text="Full Name" prefWidth="250"/>
                            <TableColumn fx:id="studentUsernameCol" text="Username" prefWidth="200"/>
                            <TableColumn fx:id="studentStatusCol" text="Status" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Teachers">
                <VBox>
                    <TableView fx:id="teachersTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                        <columns>
                            <TableColumn fx:id="teacherNameCol" text="Full Name" prefWidth="250"/>
                            <TableColumn fx:id="teacherUsernameCol" text="Username" prefWidth="200"/>
                            <TableColumn fx:id="teacherStatusCol" text="Status" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>

    <HBox styleClass="action-bar">
        <Label fx:id="statusLabel" text="" styleClass="status-label" HBox.hgrow="ALWAYS"/>

        <VBox HBox.hgrow="ALWAYS"/> <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack"
                                            styleClass="action-button, back-button"/>

        <Button fx:id="activateButton" text="Activate Selected" onAction="#handleActivate"
                styleClass="action-button, activate-button"/>

        <Button fx:id="deactivateButton" text="Deactivate Selected" onAction="#handleDeactivate"
                styleClass="action-button, deactivate-button"/>

        <Button fx:id="deleteButton" text="Delete (Permanent)" onAction="#handleDelete"
                styleClass="action-button, delete-button"/>
    </HBox>

</VBox>