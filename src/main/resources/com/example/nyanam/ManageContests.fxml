<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.ManageContestsController"
      alignment="TOP_CENTER"
      stylesheets="@ManageContests.css" styleClass="root">

    <Label text="Manage Contests" styleClass="page-title"/>

    <TableView fx:id="contestTableView" prefHeight="400" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columns>
            <TableColumn fx:id="contestNameCol" text="Contest Name" prefWidth="300"/>
            <TableColumn fx:id="startTimeCol" text="Start Time" prefWidth="180"/>
            <TableColumn fx:id="endTimeCol" text="End Time" prefWidth="180"/>
            <TableColumn fx:id="questionCountCol" text="# Questions" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox styleClass="action-bar">
        <Label fx:id="statusLabel" text="" styleClass="status-label" HBox.hgrow="ALWAYS"/>

        <VBox HBox.hgrow="ALWAYS"/> <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack"
                                            styleClass="back-button"/>

        <Button fx:id="deleteButton" text="Delete Selected" onAction="#handleDelete"
                styleClass="delete-button"/>

        <Button fx:id="addButton" text="Add New Contest" onAction="#handleAdd"
                styleClass="add-button"/>
    </HBox>

</VBox>