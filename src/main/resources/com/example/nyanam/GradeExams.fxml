<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.GradeExamsController"
      alignment="TOP_CENTER"
      stylesheets="@GradeExams.css" styleClass="root">

    <Label text="Grade Student Exams" styleClass="page-title"/>
    <Label text="The following attempts are pending review." styleClass="page-subtitle"/>

    <TableView fx:id="pendingTableView" prefHeight="400" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columns>
            <TableColumn fx:id="studentNameCol" text="Student Name" prefWidth="200"/>
            <TableColumn fx:id="examNameCol" text="Exam Name" prefWidth="240"/>
            <TableColumn fx:id="submittedAtCol" text="Date Submitted" prefWidth="180"/>
        </columns>
    </TableView>

    <HBox styleClass="action-bar">
        <Label fx:id="statusLabel" text="" styleClass="status-label" HBox.hgrow="ALWAYS"/>

        <VBox HBox.hgrow="ALWAYS"/> <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack"
                                            styleClass="back-button"/>

        <Button fx:id="gradeButton" text="Grade Selected Attempt" onAction="#handleGrade"
                styleClass="grade-button"/>
    </HBox>
</VBox>