<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.ContestResultsController"
      alignment="TOP_CENTER" spacing="15"
      style="-fx-background-color: #f4f4f4; -fx-padding: 30; -fx-font-family: 'Arial';">

    <Label text="Contest Finished!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <Label fx:id="yourScoreLabel" text="Your Score: 0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #007bff;"/>

    <Label text="Leaderboard (Top 10)" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>

    <TableView fx:id="leaderboardTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="rankCol" text="Rank" prefWidth="70" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="nameCol" text="Name" prefWidth="300"/>
            <TableColumn fx:id="scoreCol" text="Score" prefWidth="100" style="-fx-alignment: CENTER;"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack"
                style="-fx-font-size: 14px; -fx-padding: 8 15; -fx-background-color: #555; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"/>
    </HBox>
</VBox>