<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.CreateExamDetailsController"
      alignment="TOP_CENTER" spacing="15" styleClass="root"
      stylesheets="@Dashboard.css">

    <padding>
        <Insets top="30" right="50" bottom="30" left="50"/>
    </padding>

    <Label text="Create New Exam" styleClass="header-label"/>

    <VBox spacing="10" maxWidth="400">
        <Label text="Exam Name:" />
        <TextField fx:id="examNameField" promptText="e.g., OOP Midterm 1"/>

        <Label text="Exam Duration (minutes):" />
        <Spinner fx:id="durationSpinner" min="1" max="180" initialValue="60" editable="true"/>
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Cancel" onAction="#handleCancel" styleClass="logout-button" prefWidth="180"/>
        <Button text="Save &amp; Add Questions" onAction="#handleSaveAndAddQuestions" styleClass="dashboard-button" prefWidth="180"/>
    </HBox>

    <Label fx:id="statusLabel" styleClass="status-label" textFill="red"/>

</VBox>
