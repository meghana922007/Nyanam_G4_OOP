<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.ContestResultsController"
      stylesheets="@ContestResults.css" styleClass="root">

    <Label text="Contest Finished!" styleClass="page-title"/>

    <Label fx:id="yourScoreLabel" text="Your Score: 0" styleClass="score-label"/>

    <Label text="Leaderboard (Top 10)" styleClass="leaderboard-title"/>

    <TableView fx:id="leaderboardTable" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columns>
            <TableColumn fx:id="rankCol" text="Rank" prefWidth="70"/>
            <TableColumn fx:id="nameCol" text="Name" prefWidth="300"/>
            <TableColumn fx:id="scoreCol" text="Score" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox styleClass="action-bar">
        <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack"
                styleClass="back-button"/>
    </HBox>
</VBox>