<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.ManageUsersController"
      alignment="TOP_CENTER" spacing="15"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20; -fx-font-family: 'Arial';">

    <Label text="Manage User Accounts" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <TabPane fx:id="tabPane" VBox.vgrow="ALWAYS">
        <tabs>
            <Tab text="Students">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="studentNameCol" text="Full Name" prefWidth="250"/>
                            <TableColumn fx:id="studentUsernameCol" text="Username" prefWidth="200"/>
                            <TableColumn fx:id="studentStatusCol" text="Status" prefWidth="100" style="-fx-alignment: CENTER;"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Teachers">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TableView fx:id="teachersTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="teacherNameCol" text="Full Name" prefWidth="250"/>
                            <TableColumn fx:id="teacherUsernameCol" text="Username" prefWidth="200"/>
                            <TableColumn fx:id="teacherStatusCol" text="Status" prefWidth="100" style="-fx-alignment: CENTER;"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="statusLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: red;" HBox.hgrow="ALWAYS"/>
        <VBox HBox.hgrow="ALWAYS"/> <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack"
                                            style="-fx-font-size: 14px; -fx-padding: 8 15; -fx-background-color: #555; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"/>
        <Button fx:id="activateButton" text="Activate Selected" onAction="#handleActivate"
                style="-fx-font-size: 14px; -fx-padding: 8 15; -fx-background-color: #28a745; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"/>
        <Button fx:id="deactivateButton" text="Deactivate Selected" onAction="#handleDeactivate"
                style="-fx-font-size: 14px; -fx-padding: 8 15; -fx-background-color: #f0ad4e; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"/>
        <Button fx:id="deleteButton" text="Delete (Permanent)" onAction="#handleDelete"
                style="-fx-font-size: 14px; -fx-padding: 8 15; -fx-background-color: #c9302c; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"/>
    </HBox>

</VBox>