<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.ManageContestsController"
      alignment="TOP_CENTER" spacing="20"
      style="-fx-background-color: #f4f4f4; -fx-font-family: 'Arial';">

    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <Label text="Manage Contests" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <TableView fx:id="contestTableView" prefHeight="400" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="contestNameCol" text="Contest Name" prefWidth="300"/>
            <TableColumn fx:id="startTimeCol" text="Start Time" prefWidth="180" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="endTimeCol" text="End Time" prefWidth="180" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="questionCountCol" text="# Questions" prefWidth="100" style="-fx-alignment: CENTER;"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="statusLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: red;" HBox.hgrow="ALWAYS"/>
        <VBox HBox.hgrow="ALWAYS"/> <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack"
                                            style="-fx-font-size: 14px; -fx-padding: 8 15; -fx-background-color: #555; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"/>
        <Button fx:id="deleteButton" text="Delete Selected" onAction="#handleDelete"
                style="-fx-font-size: 14px; -fx-padding: 8 15; -fx-background-color: #c9302c; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"/>
        <Button fx:id="addButton" text="Add New Contest" onAction="#handleAdd"
                style="-fx-font-size: 14px; -fx-padding: 8 15; -fx-background-color: #28a745; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 5;"/>
    </HBox>

</VBox>