<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.CreateContestController"
      stylesheets="@CreateContest.css" styleClass="root">

    <Label text="Create New Contest" styleClass="page-title"/>

    <Label text="Contest Name:" styleClass="form-label"/>
    <TextField fx:id="contestNameField" promptText="e.g., Weekly Java Challenge"
               styleClass="text-field" maxWidth="500"/>

    <GridPane styleClass="form-grid">
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>

        <Label text="Start Date:" styleClass="form-label"
               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <DatePicker fx:id="startDatePicker" styleClass="date-picker"
                    GridPane.rowIndex="1" GridPane.columnIndex="0"/>

        <Label text="Start Time (HH:mm):" styleClass="form-label"
               GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <TextField fx:id="startTimeField" promptText="e.g., 14:00"
                   styleClass="text-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="End Date:" styleClass="form-label"
               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="endDatePicker" styleClass="date-picker"
                    GridPane.rowIndex="3" GridPane.columnIndex="0"/>

        <Label text="End Time (HH:mm):" styleClass="form-label"
               GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <TextField fx:id="endTimeField" promptText="e.g., 18:00"
                   styleClass="text-field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox styleClass="button-bar">
        <Label fx:id="statusLabel" text="" styleClass="status-label" HBox.hgrow="ALWAYS"/>

        <Button text="Cancel" onAction="#handleCancel" styleClass="cancel-button"/>
        <Button text="Save &amp; Add Questions" onAction="#handleSave" styleClass="save-button"/>
    </HBox>

</VBox>