<?xml version="1.0" encoding="UTF-8"?>

<!-- Imports for all JavaFX components used -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Root container, VBox, with controller and stylesheet references -->
<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.AddQuestionsController"
      alignment="TOP_CENTER" spacing="15" styleClass="root"
      stylesheets="@Dashboard.css">

    <!--
      *** FIX ***
      The <fx:definitions> block has been removed to avoid the parsing error.
      The ToggleGroup will now be created in the controller's initialize() method.
    -->

    <!-- Padding for the whole window -->
    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>

    <!-- Title label, bound to fx:id -->
    <Label fx:id="examTitleLabel" text="Add Questions to Exam" styleClass="header-label-small"/>

    <!-- Question Details Area -->
    <VBox spacing="10" style="-fx-border-color: #ccc; -fx-padding: 15; -fx-border-radius: 5;">

        <!-- Question Type and Marks -->
        <HBox spacing="20" alignment="CENTER_LEFT">
            <Label text="Question Type:" />
            <ChoiceBox fx:id="questionTypeChoiceBox">
                <!-- Items will be added in controller -->
            </ChoiceBox>

            <Label text="Marks:" />
            <Spinner fx:id="marksSpinner" min="1" max="100" initialValue="1" editable="true" prefWidth="80"/>
        </HBox>

        <!-- Question Text Area -->
        <Label text="Question Text:"/>
        <TextArea fx:id="questionTextArea" promptText="Enter the full question here..." wrapText="true" prefHeight="100"/>

        <!-- MCQ Options Area - Only visible if MCQ is selected -->
        <VBox fx:id="mcqOptionsVBox" spacing="8" managed="false" visible="false">
            <Label text="MCQ Options (Select the correct answer):"/>

            <!-- Option 1 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <!-- FIX: 'toggleGroup' property removed -->
                <RadioButton fx:id="option1Radio" />
                <TextField fx:id="option1Field" promptText="Option A" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Option 2 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <!-- FIX: 'toggleGroup' property removed -->
                <RadioButton fx:id="option2Radio" />
                <TextField fx:id="option2Field" promptText="Option B" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Option 3 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <!-- FIX: 'toggleGroup' property removed -->
                <RadioButton fx:id="option3Radio" />
                <TextField fx:id="option3Field" promptText="Option C" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Option 4 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <!-- FIX: 'toggleGroup' property removed -->
                <RadioButton fx:id="option4Radio" />
                <TextField fx:id="option4Field" promptText="Option D" HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>

        <!-- Add Question Button -->
        <Button text="Add This Question to Exam" onAction="#handleAddQuestion" styleClass="dashboard-button" maxWidth="Infinity"/>
    </VBox>

    <!-- Status Label for feedback -->
    <Label fx:id="statusLabel" styleClass="status-label" textFill="green"/>

    <!-- Finish Button -->
    <VBox VBox.vgrow="ALWAYS" alignment="BOTTOM_RIGHT">
        <Button text="Finish &amp; Close" onAction="#handleFinish" styleClass="logout-button" prefWidth="180"/>
    </VBox>

</VBox>

