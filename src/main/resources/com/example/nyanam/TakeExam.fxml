<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.nyanam.TakeExamController"
            stylesheets="@TakeExam.css">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-bar">
            <Label fx:id="examNameLabel" text="Exam: [Exam Name]"
                   styleClass="header-title" HBox.hgrow="ALWAYS"/>
            <Label fx:id="timerLabel" text="Time Left: 00:00:00"
                   styleClass="timer-label"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox fx:id="questionContainer" spacing="15" styleClass="question-container">

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="questionNumberLabel" text="Question 1 of X"
                           styleClass="question-number" HBox.hgrow="ALWAYS"/>
                    <Label fx:id="marksLabel" text="([Y] Marks)"
                           styleClass="question-marks"/>
                </HBox>

                <Label fx:id="questionTextLabel"
                       text="This is where the text of the question will go. It will wrap as needed."
                       styleClass="question-text"/>

                <VBox minHeight="20"/>

                <VBox fx:id="answerContainer" spacing="10" VBox.vgrow="ALWAYS">
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="navigation-bar">
            <Button fx:id="previousButton" text="Previous" onAction="#handlePrevious"
                    styleClass="nav-button"/>

            <VBox HBox.hgrow="ALWAYS"/> <Label fx:id="statusLabel" text="" styleClass="status-label"/>

            <VBox HBox.hgrow="ALWAYS"/> <Button fx:id="nextButton" text="Next" onAction="#handleNext"
                                                styleClass="nav-button"/>

            <Button fx:id="submitButton" text="Submit Exam" onAction="#handleSubmit"
                    styleClass="submit-button" visible="false"/>
        </HBox>
    </bottom>

</BorderPane>