<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.nyanam.StudentDashboardController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@StudentDashboard.css">

    <top>
        <HBox fx:id="headerBar" styleClass="header-bar">
            <Label text="Nyanam Student Dashboard"
                   styleClass="header-title"
                   HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                    styleClass="logout-button"/>
        </HBox>
    </top>

    <center>
        <VBox fx:id="contentArea" styleClass="content-area">

            <Label fx:id="welcomeLabel" text="Welcome, Student!"
                   styleClass="welcome-label"/>

            <VBox fx:id="menuContainer" styleClass="menu-container">
                <Button fx:id="takeExamButton" text="Take Exam" onAction="#handleTakeExam"
                        styleClass="menu-button"/>

                <Button fx:id="viewResultsButton" text="View Results" onAction="#handleViewResults"
                        styleClass="menu-button"/>

                <Button fx:id="practiceButton" text="Practice Section" onAction="#handlePractice"
                        styleClass="menu-button"/>

                <Button fx:id="competitiveButton" text="Competitive Campus" onAction="#handleCompetitive"
                        styleClass="competitive-button"/>
            </VBox>

        </VBox>
    </center>

    <bottom>
        <HBox fx:id="statusBar" styleClass="status-bar">
            <Label fx:id="statusLabel" text="Ready." styleClass="status-label"/>
        </HBox>
    </bottom>

</BorderPane>