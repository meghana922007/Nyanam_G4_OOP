<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.SelectExamController"
      alignment="TOP_CENTER"
      stylesheets="@SelectExam.css" styleClass="root">

    <Label text="Select an Exam to Begin" styleClass="page-title"/>
    <Label text="Select an exam from the list below and click 'Start Selected Exam'." styleClass="page-subtitle"/>

    <TableView fx:id="examTableView" prefHeight="400" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columns>
            <TableColumn fx:id="examNameCol" text="Exam Name" prefWidth="340">
                <cellValueFactory>
                    <PropertyValueFactory property="examName" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="durationCol" text="Duration (mins)" prefWidth="120" styleClass="centered-column">
                <cellValueFactory>
                    <PropertyValueFactory property="duration" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="questionCountCol" text="# Questions" prefWidth="120" styleClass="centered-column">
                <cellValueFactory>
                    <PropertyValueFactory property="questionCount" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="totalMarksCol" text="Total Marks" prefWidth="120" styleClass="centered-column">
                <cellValueFactory>
                    <PropertyValueFactory property="totalMarks" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="action-bar">
        <Label fx:id="statusLabel" text="" styleClass="status-label" HBox.hgrow="ALWAYS"/>

        <VBox HBox.hgrow="ALWAYS"/> <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack"
                                            styleClass="back-button"/>

        <Button fx:id="startButton" text="Start Selected Exam" onAction="#handleStartExam"
                styleClass="start-button"/>
    </HBox>

</VBox>