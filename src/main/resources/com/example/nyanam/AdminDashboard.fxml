<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.AdminDashboardController"
      alignment="TOP_CENTER" spacing="20" styleClass="root"
      stylesheets="@Dashboard.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Admin Dashboard" styleClass="header-label"/>

    <TilePane hgap="20" vgap="20" alignment="CENTER" prefColumns="3">

        <Button text="Add Teacher" onAction="#handleAddTeacher" styleClass="dashboard-button" prefWidth="200" prefHeight="100"/>
        <Button text="Add Student" onAction="#handleAddStudent" styleClass="dashboard-button" prefWidth="200" prefHeight="100"/>
        <Button text="Manage Contests" onAction="#handleManageContests" styleClass="dashboard-button" prefWidth="200" prefHeight="100"/>
        <Button text="Manage Users" onAction="#handleManageUsers" styleClass="dashboard-button" prefWidth="200" prefHeight="100"/>


        <Button text="Logout" onAction="#handleLogout" styleClass="logout-button" prefWidth="200" prefHeight="100"/>

    </TilePane>

    <Label fx:id="statusLabel" styleClass="status-label"/>

</VBox>