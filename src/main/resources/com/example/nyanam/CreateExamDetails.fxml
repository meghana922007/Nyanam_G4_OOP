<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.nyanam.CreateExamDetailsController"
      styleClass="root" stylesheets="@CreateExam.css">

    <Label text="Create New Exam" styleClass="header-label"/>

    <VBox styleClass="form-container">
        <Label text="Exam Name:" styleClass="form-label"/>
        <TextField fx:id="examNameField" promptText="e.g., OOP Midterm 1"/>

        <Label text="Exam Duration (minutes):" styleClass="form-label"/>
        <Spinner fx:id="durationSpinner" min="1" max="180" initialValue="60" editable="true"/>
    </VBox>

    <HBox styleClass="button-bar">
        <Button text="Cancel" onAction="#handleCancel" styleClass="cancel-button"/>
        <Button text="Save &amp; Add Questions" onAction="#handleSaveAndAddQuestions" styleClass="save-button"/>
    </HBox>

    <Label fx:id="statusLabel" styleClass="status-label"/>

</VBox>